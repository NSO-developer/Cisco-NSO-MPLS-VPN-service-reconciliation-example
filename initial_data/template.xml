      </snmp-server>

      <snmp-server xmlns="http://tail-f.com/ned/cisco-ios-xr">
        <community>
          <name>{$COMMUNITY}</name>
          <RO/>
        </community>
      </snmp-server>

    </config>
  </template>
  </devices>
</config>
